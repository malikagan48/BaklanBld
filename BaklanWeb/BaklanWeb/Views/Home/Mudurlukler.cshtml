@model IEnumerable <BaklanWeb.Models.Model.Mudurlukler>

@{
    ViewBag.Title = "Mudurlukler";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div id="banner-area" class="banner-area" style="background-image:url(/Content/constra-1.0.0/images/banner/banner1.jpg)">
    <div class="banner-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner-heading">
                        <h1 class="banner-title">Müdürlüklerimiz</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a href="/Mudurlukler/">Müdürlüklerimiz</a></li>
                            </ol>
                        </nav>
                    </div>
                </div><!-- Col end -->
            </div><!-- Row end -->
        </div><!-- Container end -->
    </div><!-- Banner text end -->
</div><!-- Banner area end -->

<section id="main-container" class="main-container pb-4">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-12">
                <h3 class="section-sub-title">Müdürlüklerimiz</h3>
            </div>
        </div>
        <!--/ Title row end -->
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6 mb-5">

                    <div class="ts-team-wrapper">
                        <div class="team-img-wrapper">
                            <img loading="lazy" src="@item.MudurluklerResimURL" class="img-fluid" alt="team-img">
                        </div>
                        <div class="ts-team-content-classic">
                            <h3 class="ts-name">@item.MudurluklerBaslik</h3>

                            <!--/ social-icons-->
                        </div>
                    </div>

                    <!--/ Team wrapper 1 end -->
                </div><!-- Col end -->
            }
        </div><!-- Content row 1 end -->
       
    </div><!-- Container end -->
</section><!-- Main container end -->
