
@using BaklanWeb.Helper;
@model IEnumerable<BaklanWeb.Models.Model.Turizm>

@{
    ViewBag.Title = "Turizm";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<div id="banner-area" class="banner-area" style="background-image:url(/Content/constra-1.0.0/images/banner/banner1.jpg)">
    <div class="banner-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner-heading">
                        <h1 class="banner-title">Turizm</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a href="/Turizm/">Turizm</a></li>
                            </ol>
                        </nav>
                    </div>
                </div><!-- Col end -->
            </div><!-- Row end -->
        </div><!-- Container end -->
    </div><!-- Banner text end -->
</div><!-- Banner area end -->

<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-12">
                @{
                    Html.RenderAction("TurizmKategori", "Home");
                }
                <div class="row shuffle-wrapper">

                    <div class="col-1 shuffle-sizer"></div>
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 shuffle-item">

                            <div class="project-img-container">

                                <a class="gallery-popup" href="@item.TurizmResimURL">
                                    <img class="img-fluid" src="@item.TurizmResimURL" alt="@item.TurizmBaslik">

                                    <span class="gallery-icon"><i class="fa fa-plus"></i></span>
                                </a>

                                <div class="project-item-info">
                                    <div class="project-item-info-content">
                                        <h3 class="project-item-title">
                                            <a href=""@*/TurizmPage/@SeoHelper.ToSeoUrl(item.TurizmBaslik).ToLower()-@item.TurizmId*@>@item.TurizmBaslik</a>
                                        </h3>
                                    </div>
                                </div>

                            </div>

                        </div>
                    }

                    <!-- shuffle item 1 end -->

                </div><!-- shuffle end -->

            </div>

        </div><!-- Content row end -->
    </div><!-- Conatiner end -->
</section>