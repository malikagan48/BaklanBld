@model IEnumerable<BaklanWeb.Models.Model.Mudurlukler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mudurlukler</h2>

<a class="btn btn-default" href="/Mudurlukler/Create/">Yeni Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MudurluklerId</td>
                <td>@item.MudurluklerBaslik</td>
                <td>@Html.Raw(item.MudurluklerAciklama)</td>
                <td><img width="100" height="100" src="@item.MudurluklerResimURL" /></td>
                <td><a href="/Mudurlukler/Edit/@item.MudurluklerId">Düzenle</a> | <a href="/Mudurlukler/Delete/@item.MudurluklerId">Sil</a></td>
            </tr>
        }



    </tbody>
</table>
