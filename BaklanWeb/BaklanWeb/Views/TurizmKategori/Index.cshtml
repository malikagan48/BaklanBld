@model IEnumerable<BaklanWeb.Models.Model.TurizmKategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Turizm Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TurizmKategoriAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TurizmKategoriAciklama)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TurizmKategoriAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TurizmKategoriAciklama)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.TurizmKategoriId }) |
                @Html.ActionLink("Detay", "Details", new { id = item.TurizmKategoriId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.TurizmKategoriId })
            </td>
        </tr>
    }

</table>
